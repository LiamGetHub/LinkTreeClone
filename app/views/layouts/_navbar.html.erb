<%= stylesheet_link_tag "/app/assets/stylesheets/navbar.css", media: "all" %>

<nav class="navbar">
<div class="navbar-brand">
        <%= link_to root_path do %>
            <%= image_tag("/app/assets/images/logo.png", alt: "Logo", class: "navbar-logo") %>
        <% end %>
    </div>

    <div class="navbar-links">
        <% if user_signed_in? %>
            <div class="navbar-user">
                <%= link_to "My Account", edit_user_registration_path, class: "nav-link" %>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link logout" %>
            </div>
        <% else %>
            <div class="navbar-auth">
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
                <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
            </div>
        <% end %>
    </div>
</nav>