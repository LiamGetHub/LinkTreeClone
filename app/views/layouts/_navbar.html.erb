<nav style="background-color: #2c3e50; padding: 10px 20px; display: flex; justify-content: space-between; align-items: center;">
    <div class="navbar-brand">
        <%= link_to root_path do %>
            <%= image_tag("/app/assets/images/logo.png", alt: "Logo", style: "height: 40px; width: auto;") %>
        <% end %>
    </div>

    <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
        <% if user_signed_in? %>
            <div style="display: flex; align-items: center;">
                <%= link_to "My Account", edit_user_registration_path, { style: "color: #ecf0f1; text-decoration: none; font-size: 16px; margin: 0 10px; padding: 5px 10px; transition: background-color 0.3s ease;" } %>
                
                <%= link_to "Sign Out", destroy_user_session_path, { method: :delete, style: "background-color: #e74c3c; color: white; border-radius: 4px; text-decoration: none; font-size: 16px; margin: 0 10px; padding: 5px 10px; transition: background-color 0.3s ease;", onmouseover: "this.style.backgroundColor='#c0392b'", onmouseout: "this.style.backgroundColor='#e74c3c'" } %>
            </div>
        <% else %>
            <div style="display: flex; gap: 10px;">
                <%= link_to "Sign Up", new_user_registration_path, { style: "color: #ecf0f1; text-decoration: none; font-size: 16px; margin: 0 10px; padding: 5px 10px; transition: background-color 0.3s ease;", onmouseover: "this.style.backgroundColor='#34495e'; this.style.borderRadius='4px'", onmouseout: "this.style.backgroundColor='transparent'" } %>
                
                <%= link_to "Log In", new_user_session_path, { style: "color: #ecf0f1; text-decoration: none; font-size: 16px; margin: 0 10px; padding: 5px 10px; transition: background-color 0.3s ease;", onmouseover: "this.style.backgroundColor='#34495e'; this.style.borderRadius='4px'", onmouseout: "this.style.backgroundColor='transparent'" } %>
            </div>
        <% end %>
    </div>
</nav>
